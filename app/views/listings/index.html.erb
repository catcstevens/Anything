<h1>Things to Borrow from your Neighbour</h1>

<%= search_form_for @search do |f| %>
    <div class="field">
        <%= f.label :title_cont, "What are you looking for?" %>
        <%= f.text_field :title_cont %>
    </div>
    <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<% @listings.each do |listing| %>
    <%= image_tag listing.picture if listing.picture.attached? %>
    <p>What I'm renting: <%= listing.title %></p>
    <p>For people casually doing: <%= listing.category.name %></p>
    <p>A bit about my thing: <%= listing.description %></p>
    <p>Condition: <%= listing.condition %></p>
    <p>Date it's available: <%= listing.from %></p>
    <p>To: <%= listing.to %></p>
    <p>How can you get it? <%= listing.delivery %></p>
    <p>Minimum rental <%= listing.rental_period %></p>
    <p>Daily fee: $<%= listing.price %></p>
    <%= link_to "edit", edit_listing_path(listing.id) if current_user.id == listing.user.id %>
    <button type="button" class="btn btn-custom"><%= link_to "View #{listing.title}", listing_path(listing.id) %></button>
    <%= link_to "delete", listing_path(listing),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
<% end %>