<h1> Talking to <%=@receiver.email%> </h1>

<h1>New message to <%= @receiver.name %></h1>

<%= form_for @personal_message do |f| %>
  <%= hidden_field_tag 'receiver_id', @receiver.id %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>


<ul>
<%@messages.each do |message|%> 
    <li><%=message.body%> </li>
    <%end%>
</ul>
